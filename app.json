{
  "expo": {
    "name": "Enviro Monitor",
    "slug": "env-risk-alert",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "envriskalert",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.anonymous.envriskalert",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Enviro Monitor needs your location to fetch real-time air quality and weather data for your area.",
        "NSLocationAlwaysUsageDescription": "Enviro Monitor needs your location to monitor environmental conditions."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#060f0a",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.envriskalert",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "color": "#34D399"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Enviro Monitor needs your location to fetch real-time air quality and weather data."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#060f0a",
          "dark": {
            "backgroundColor": "#060f0a"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1c12c286-825e-4a2f-96b3-7feeef810a68"
      }
    }
  }
}
